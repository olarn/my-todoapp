pipeline {
    agent any
    stages {
        stage('confirm version') {
            steps {
                nodejs('Node18.1.0') {
                    sh 'node -v'
                    sh 'npm -v'
                }
            }
        }
        stage('install node packages') {
            steps {
                nodejs('Node18.1.0') {
                    sh 'npm install'
                }
            }
        }
        stage('Deploy to server') {
            steps {
                sshagent(credentials:['superuser-credential']) {
                    sh """
                        docker build -t olarn/my-todoapp:latest .
                    """
                }
                echo "Login success"
            }
        }
    }
}