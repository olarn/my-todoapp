pipeline {
    agent any
    stages {
        stage('confirm version') {
            steps {
                nodejs('Node17.9') {
                    sh 'node -v'
                    sh 'npm -v'
                }
            }
        }
        stage('install node packages') {
            steps {
                nodejs('Node17.9') {
                    sh 'npm install'
                }
            }
        }
        stage('Deploy to server') {
            steps {
                sshagent(credentials:['superuser-credential']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no superuser@192.168.1.120 uptime "whoami"
                    """
                }
                echo "Login success"
            }
        }
    }
}